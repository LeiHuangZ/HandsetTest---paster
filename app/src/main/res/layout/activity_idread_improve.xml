<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/basic_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/idread_test"/>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="455px"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/id_font"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/editText_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="@dimen/y21"
            android:text="金阳"
            android:textColor="#3D3837"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/editText_sex"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_name"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/nv"
            android:textColor="#3D3837"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/editText_nation"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_name"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="@string/case1"
            android:textColor="#3D3837"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/editText_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_sex"
            android:layout_marginStart="100dp"
            android:layout_marginTop="14dp"
            android:text="1978"
            android:textColor="#3D3837"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/editText_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_sex"
            android:layout_marginStart="170dp"
            android:layout_marginTop="14dp"
            android:text="10"
            android:textColor="#3D3837"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/editText_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_sex"
            android:layout_marginStart="215dp"
            android:layout_marginTop="14dp"
            android:text="27"
            android:textColor="#3D3837"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/editText_address"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_below="@id/editText_year"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:text="北京市西城区复兴门外大街999号院11号楼3单元502室"
            android:textColor="#3D3837"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/editText_IDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_address"
            android:layout_marginStart="165dp"
            android:layout_marginTop="22dp"
            android:text="110102197810272321"
            android:textColor="#020201"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="190dp"
            android:layout_alignBottom="@id/editText_address"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@id/editText_day"
            android:src="@drawable/portrait"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="455px"
        android:layout_marginTop="10dp"
        android:background="@drawable/id_back">

        <TextView
            android:id="@+id/editText_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="215dp"
            android:text="北京市公安局西城分区"
            android:textColor="#020201"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/editText_effective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_office"
            android:layout_marginStart="200dp"
            android:layout_marginTop="14dp"
            android:text="2004.10.27-2024.10.26"
            android:textColor="#020201"
            android:textSize="18sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_bg"
        android:text="下一步"
        android:textSize="32sp"/>

    <include layout="@layout/layout_result_confirm"/>

</LinearLayout>